<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ryan.wangbw.mvp.UserLoginActivity">

    <GridLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:columnCount="3"
        >
        <TextView
            android:text="UserName:"
            android:layout_gravity="right"
            />
        <EditText
            android:id="@+id/id_et_username"
            android:ems="10"
            android:layout_columnSpan="2"
            android:text="zhy"
            />
        <TextView
            android:text="Password:"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:id="@+id/id_et_password"
            android:ems="10"
            android:layout_columnSpan="2"
            android:text="123"
            />

        <Button
            android:id="@+id/id_btn_login"
            android:text="Login"
            android:layout_column="1"/>

        <Button
            android:id="@+id/id_btn_clear"
            android:text="Clear"
            android:layout_column="2"/>
    </GridLayout>
   <!-- <ProgressBar
        android:id="@+id/id_pb_loading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>-->
</RelativeLayout>
