<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryan.wangbw.drawable.AnimatorActivity">
    <Button android:id="@+id/scaleBtn" android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="scaleBtn"
            android:text="start ohohohohoh"
            android:visibility="gone"
        />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:visibility="gone"
        >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="Property Animation"
                  android:textColor="@android:color/black"
                  android:textSize="20sp"
                  android:id="@+id/textview"
            />
        <Button android:id="@+id/animationBtn" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="animation"
                android:onClick="objectAnimator"
            />
    </LinearLayout>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/animateBtn"
            android:onClick="animate"
            android:text="animate"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@drawable/half_circle_rectangle"
              android:text="test"
              android:textSize="20sp"
              android:layout_below="@+id/animateBtn"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:padding="10dp"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/animateTv"
              android:text="Property Animation"
              android:textColor="@android:color/black"
              android:textSize="20sp"
              android:layout_gravity="center"
              android:layout_centerInParent="true"
        />


</RelativeLayout>
