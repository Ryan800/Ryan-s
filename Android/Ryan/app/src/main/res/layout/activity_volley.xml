<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ryan.wangbw.volley.VolleyActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
        >
        <Button android:id="@+id/getStringBtn" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GetString"
            />
        <Button android:id="@+id/getJsonBtn" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GetJson"
            />
        <Button android:id="@+id/getImageBtn" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GetImage"
            />


    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
            >
            <TextView android:id="@+id/volleyTv" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
